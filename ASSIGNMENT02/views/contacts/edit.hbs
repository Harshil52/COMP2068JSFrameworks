<h1>{{title}}</h1>

<form method="POST">

<fieldset>
    <label for="name" class="col-2">
      Name:
    </label>
    <input name="name" id="name" required value="{(contacts.name)}"/>
</fieldset>

<fieldset>
    <label for="contact" class="col-2">
      Contact:
    </label>
    <input name="contact" id="contact" required value="{(contacts.contact)}"/>
</fieldset>

<fieldset>
    <label for="relation" class="col-2">
      Relation:
    </label>
    <select name="relation" id="relation">
      {{#each relations}}
        {{createOptionElement this.name ../contact.relation}}
      {{/each}}
    </select>
</fieldset>

<fieldset>
    <label for="email" class="col-2">
      Email:
    </label>
    <input name="email" id="email" required  value="{(contacts.email)}"/>
</fieldset>
  
  <button class="offset-3 btn btn-primary">
    Save contact
  </button>

</form>