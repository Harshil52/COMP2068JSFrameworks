<h1>Login Here!</h1>

{{#if messages}}
  <div class="alert alert-danger">Invalid credentials</div>
{{else}}
  <div class="header-line">Please enter your credentials</div>
{{/if}}

<form method="post">
  <fieldset>
    <label for="username">Username : *</label>
    <input name="username" id="username" required />
  </fieldset>
  <fieldset>
    <label for="password">Password : * </label>
    <input name="password" id="password" type="password" required />
  </fieldset>

<p class="login-data">
    <button class="login-buttons">Login</button>
    <button class="login-buttons"><a href="/github">Login with Github</a></button>
    <br>
    Not having an account Register Here! <a href="/register" class="register">Register</a>
</p>
</form>